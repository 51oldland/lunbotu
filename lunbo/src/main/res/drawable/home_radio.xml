<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:drawable="@drawable/lunbo_click" android:state_checked="true"/>-->
    <!--<item android:drawable="@drawable/lunbo" android:state_checked="false"/>-->

    <item  android:state_checked="true">
        <shape
            android:shape="oval"
            android:useLevel="false">

            <gradient
                android:centerColor="#ffffff"
                android:endColor="#ffffff"
                android:startColor="#ffffff"/>
            <stroke
                android:width="1dp"
                android:color="#00FFFFFF"/>
            <size
                android:width="6dp"
                android:height="6dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="oval"
            android:useLevel="false">

            <gradient
                android:centerColor="#48ffffff"
                android:endColor="#48ffffff"
                android:startColor="#48ffffff"/>
            <stroke
                android:width="1dp"
                android:color="#00FFFFFF"/>
            <size
                android:width="6dp"
                android:height="6dp"/>

        </shape>
    </item>
</selector>